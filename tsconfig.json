{
  "compilerOptions": {
    "strict": true,
    "module": "CommonJS",
    "target": "ES5",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@app/*": ["./app/*"]
    },
    "typeRoots": ["src/declarations/env.d.ts", "./node_modules/@types"],
    "lib": [
      "ESNext"
    ],
    "allowJs": false,
    "checkJs": false,
    "outDir": "./dist",
    "rootDirs": [
      "./src",
      "tests_backup"
    ],
    "declaration": true,
    "sourceMap": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false
  },
  "include": [
    "./src/**/*.ts",
    "tests_backup/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}